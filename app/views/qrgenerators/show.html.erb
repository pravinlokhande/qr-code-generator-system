<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_qrgenerator_path(@qrgenerator) %> |
<%= link_to 'Back', qrgenerators_path %>


<style type="text/css">
 table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
 }
 td {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
   padding: 0;
   margin: 0;
   width: 10px;
   height: 10px;
 }
 td.black { background-color: #000; }
 td.white { background-color: #fff; }
</style>
<p/>
<table>
  <thead>
  	<span><strong>Google URL: <a href="<%= @qr_details[:google_url] %>"><%= @qr_details[:google_url] %></a></strong></span>
  	<p/>
  	<span><strong>QR: <%= @qr_details[:qr] %></strong></span>
  </thead>
  <p/>
  <tbody>
  	<% @qr.modules.each_index do |x| -%>
	   <tr>
	   <% @qr.modules.each_index do |y| -%>
	    <% if @qr.dark?(x,y) -%>
	    <td class="black"/>
	    <% else -%>
	    <td class="white"/>
	    <% end -%>
	   <% end -%>
	   </tr>
	 <% end -%>
  </tbody>
</table>